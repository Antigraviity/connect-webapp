declare module 'nodemailer' {
  interface TransporterOptions {
    host?: string;
    port?: number;
    secure?: boolean;
    service?: string;
    auth?: {
      user: string;
      pass: string;
    };
    [key: string]: any;
  }

  interface MailOptions {
    from: string;
    to: string;
    subject: string;
    text?: string;
    html?: string;
    [key: string]: any;
  }

  interface SentMessageInfo {
    messageId: string;
    response: string;
    [key: string]: any;
  }

  interface Transporter {
    sendMail(mailOptions: MailOptions): Promise<SentMessageInfo>;
  }

  function createTransport(options: TransporterOptions): Transporter;

  export { createTransport, TransporterOptions, MailOptions, SentMessageInfo, Transporter };
  export default { createTransport };
}
