"use client";

import { useState } from "react";
import { FaStore, FaUser, FaTimes, FaBriefcase } from "react-icons/fa";
import Link from "next/link";

type UserType = "seller" | "buyer" | "employer";
type Step = 1 | 2 | 3;

/* ---------- CATEGORY & SERVICE DATA ---------- */
const categoriesWithServices: Record<string, string[]> = {
  "Beauty & Wellness": [
    "Salon Services",
    "Bridal Makeup & Grooming",
    "Massage & Spa Therapy",
    "Mehndi / Henna Artists",
    "Nail Art & Extensions",
    "Facial & Skin Care",
    "Men's Grooming",
    "Beauty Parlour at Home",
    "Ayurvedic & Herbal Treatments",
  ],
  "Health & Medical": [
    "Doctor Consultation",
    "Diagnostic & Lab Test Booking",
    "Physiotherapy at Home",
    "Nursing & Elderly Care",
    "Medicine Delivery",
    "Health Checkup Packages",
    "Dental Services",
